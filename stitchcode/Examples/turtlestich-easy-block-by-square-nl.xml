	<block-definition s="brode une &quot;fleur&quot; de %&apos;nbre de petales&apos; petales avec le code : %&apos;codes&apos;" type="command" category="embroidery">
		<header/>
		<code/>
		<translations/>
		<inputs>
			<input type="%n">4</input>
			<input type="%cmdRing"/>
		</inputs>
		<script>
			<block s="doDeclareVariables">
				<list>
					<l>a</l>
					<l>b</l>
					<l>c</l>
					<l>d</l>
				</list>
			</block>
			<custom-block s="Beweeg  %n vakjes in de richting %n">
				<l/>
				<l/>
			</custom-block>
			<block s="doSetVar">
				<l>a</l>
				<block s="xPosition"/>
			</block>
			<block s="doSetVar">
				<l>b</l>
				<block s="yPosition"/>
			</block>
			<block s="doSetVar">
				<l>c</l>
				<block s="direction"/>
			</block>
			<block s="doSetVar">
				<l>d</l>
				<block s="reportQuotient">
					<l>360</l>
					<block var="nbre de petales"/>
				</block>
			</block>
			<block s="doRepeat">
				<block var="nbre de petales"/>
				<script>
					<block s="gotoXY">
						<block var="a"/>
						<block var="b"/>
					</block>
					<custom-block s="Beweeg  %n cases en tournant de %n">
						<l>0.5</l>
						<block var="d"/>
					</custom-block>
					<custom-block s="brode %b">
						<l>
							<bool>true</bool>
						</l>
					</custom-block>
					<block s="doRun">
						<block var="codes"/>
						<list/>
					</block>
					<custom-block s="brode %b">
						<l>
							<bool>false</bool>
						</l>
					</custom-block>
					<block s="doChangeVar">
						<l>c</l>
						<block var="d"/>
					</block>
					<block s="setHeading">
						<block var="c"/>
					</block>
				</script>
			</block>
		</script>
	</block-definition>
